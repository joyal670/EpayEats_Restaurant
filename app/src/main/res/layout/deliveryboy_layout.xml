<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_delivery_boy_selection_"
    tools:context=".Activity.DeliveryBoySelection_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorCardView"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:weightSum="9">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="85dp"
                                android:layout_height="60dp"
                                android:layout_weight="2"
                                android:src="@drawable/productimages"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="18sp"
                                android:layout_weight="7"
                                android:text="Product Details"
                                android:textSize="15sp"
                                android:textStyle="bold">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:id="@+id/current_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="xxxx"
                                android:textAllCaps="true"
                                android:textColor="@color/colorBlack"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:weightSum="5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:gravity="center"
                                android:text="Price">

                            </TextView>

                            <TextView
                                android:id="@+id/current_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_weight="4"
                                android:text="xx"
                                android:textColor="@color/colorRed"
                                android:textSize="20sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:weightSum="5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:gravity="center"
                                android:text="Qty"/>


                            <TextView
                                android:id="@+id/current_qty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="4"
                                android:text="x"
                                android:textColor="@color/colorBlack"
                                android:textSize="20sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginBottom="10dp"
                            android:weightSum="5"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="3dp"
                                android:textSize="20sp"
                                android:layout_weight=".5"
                                android:text="Total"/>


                            <TextView
                                android:id="@+id/sample_menu_total"
                                android:layout_weight="4"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:textColor="@color/colorRed"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:text="x"/>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="9">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:src="@drawable/deliveryaddress"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_weight="8"
                                android:text="Delivery Address"
                                android:textSize="15sp"
                                android:textStyle="bold"/>

                        </androidx.appcompat.widget.LinearLayoutCompat>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/current_cname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="xx xx"
                                android:textAllCaps="true"
                                android:textColor="@color/colorBlack"
                                android:textSize="20sp"
                                android:textStyle="bold"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp">

                            <TextView
                                android:id="@+id/current_house"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:text="House Name"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp">

                            <TextView
                                android:id="@+id/current_area"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:text="Place"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <TextView
                                android:id="@+id/current_pincode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_weight="3"
                                android:text="Zip number"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"/>


                            <TextView
                                android:id="@+id/current_cnumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Mubile Number"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="center"
                                android:text="Status"
                                android:textSize="15sp"
                                android:textStyle="bold"/>


                            <TextView
                                android:id="@+id/current_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_weight="2"
                                android:paddingLeft="2dp"
                                android:text="Delivered"
                                android:textAllCaps="true"
                                android:textColor="@color/colorBlack"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="?attr/actionBarSize"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_weight="1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/datentime">

                            </ImageView>
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_weight="8"
                                android:layout_width="wrap_content"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"
                                android:text="Order Details">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_weight="3"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:text="Ordered Date"/>

                            <TextView
                                android:id="@+id/current_ordredDate"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_marginRight="5dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                android:text="xxxx"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_weight="3"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:text="Ordered Time"/>

                            <TextView
                                android:id="@+id/current_ordredTime"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_marginRight="5dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                android:text="xxxx"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_weight="3"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:text="Delivered Date"/>


                            <TextView
                                android:id="@+id/current_deliveredDate"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_marginRight="5dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                android:text="xxxx"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_weight="3"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:text="Delivered Time"/>


                            <TextView
                                android:id="@+id/current_deliveredTime"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_marginRight="5dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                android:text="xxxx"/>


                        </LinearLayout>






                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>